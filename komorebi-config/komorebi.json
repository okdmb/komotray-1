{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/master/schema.json",
  "app_specific_configuration_path": "C:/Users/David/.config/komotray/komorebi-config/applications.json",
  "window_hiding_behaviour": "Cloak",
  "cross_monitor_move_behaviour": "Insert",
  "alt_focus_hack": false,
  "border": true,
  "border_implementaion": "komorebi",
  "border_width": 5,
  "border_offset": -1,
  "border_style": "Square",
  "default_workspace_padding": 4,
  "default_container_padding": 4, 
  "unmanaged_window_operation_behaviour": "Op",
  "ignore_rules": [
    { "kind": "Exe", "id": "none.exe", "matching_strategy": "Regex" }
  ],
  "monitor_index_preferences": {
    "0": { "left": 0, "top": 0, "right": 0, "bottom": 0 }
  },

"border_colours": {
  "floating": "#FFB86C", // "floating": "#FFB86C",
  "monocle": "#FF79C6",
  "single": "#50FA7B", //"single": "#FF79C6",
  "stack": "#BD93F9",
  "unfocused": "#6272a4",
  "unfocused_locked": "#44475A"
  },

  // Powertoys always on top pink #FF0BD2


  "stackbar": {
    "height": 30,
    "mode": "OnStack",
    "tabs": {
      "width": 300
    }
  },


  "monitors": [
    {
      "workspaces": [
        { "name": "primary", "layout": "BSP", "bsp_max_nodes": 4 },
        { "name": "secondary", "layout": "BSP", "bsp_max_nodes": 4 },
        { "name": "tertiary", "layout": "BSP", "bsp_max_nodes": 4 },
        { "name": "quaternary", "layout": "BSP", "bsp_max_nodes": 4 },
        { "name": "Quinary", "layout": "BSP", "bsp_max_nodes": 4 },
        { "name": "PHONE", "layout": "UltrawideVerticalStack", "bsp_max_nodes": 4 }
      ]
    },
    {
      "workspaces": [
        { "name": "Septenary", "layout": "BSP", "bsp_max_nodes": 4 },
        { "name": "Octonary", "layout": "BSP", "bsp_max_nodes": 4 }
      ]
    }
  ]
}
